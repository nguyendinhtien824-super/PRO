```mermaid
classDiagram
    %% Các mối quan hệ (Relationships)
    AquaticLife <|-- Fish : Inheritance
    AquaticLife <|-- Plant : Inheritance
    PetStoreManagement "1" *-- "many" AquaticLife : contains
    PetStoreManagement "1" *-- "many" Order : manages
    Order "1" o-- "many" AquaticLife : includes
    Order "many" -- "1" Customer : placed by

    class AquaticLife {
        -String id
        -String name
        -int age
        -double price
        -String speciesType
        +AquaticLife()
        +AquaticLife(id, name, age, price, speciesType)
        +input() void
        +display() void
        +getPrice() double
        +getId() String
        +getName() String
    }

    class Fish {
        -String waterType
        -boolean isAggressive
        +Fish()
        +input() void
        +display() void
    }

    class Plant {
        -String lightRequirement
        -boolean carbonRequired
        +Plant()
        +input() void
        +display() void
    }

    class Customer {
        -String id
        -String name
        -String phone
        +Customer()
        +input() void
        +display() void
        +getName() String
    }

    class Order {
        -String orderId
        -Customer customer
        -ArrayList~AquaticLife~ itemList
        -double totalAmount
        +Order(orderId, customer)
        +addItem(item: AquaticLife) void
        +calculateTotal() void
        +display() void
    }

    class PetStoreManagement {
        -ArrayList~AquaticLife~ inventory
        -ArrayList~Order~ orders
        +PetStoreManagement()
        +addItem() void
        +removeItem() void
        +searchByName() void
        +displayAll() void
        +createOrder() void
    }

    class Main {
        +main(args: String[]) void
    }
      
